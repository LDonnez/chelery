<footer id="contact" class="contact">
  <div class="row">
    <div class="small-3 small-centered columns">
      <h3 class="text-center">CONTACT</h3>
      <p> Email: </p>
      <span><%= @settings.email %></span>
      <p> Find me on: </p>
      <div class="social-icons">
        <%= link_to fa_icon("facebook 4x"), @settings.facebook_url if @settings.facebook_url.present? %>
        <%= link_to fa_icon("twitter 4x"), @settings.twitter_url if @settings.twitter_url.present? %>
        <%= link_to fa_icon("github 4x"), @settings.github_url if @settings.github_url.present? %>
        <%= link_to fa_icon("instagram 4x"), @settings.instagram_url if @settings.instagram_url.present? %>
      </div>
    </div>
  </div>
</footer>
