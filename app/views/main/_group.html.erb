<section id="groups" class="groups">
  <div class="row small-12 medium-12 large-12 small-centered medium-centered large-centered">
    <h3 class="text-center">GROEPEN</h3>
  </div>
  <div class="row small-up-12 medium-up-2 large-up-2 text-center small-centered medium-centered large-centered">
    <% @groups.each do |g| %>
      <div class="column">
        <h4 class="text-center"><%= g.name%></h4>
        <% g.members.order(name: :asc).each do |m| %>
          <div class="member">
            <%= label_tag m.name, nil, class:"member-name" %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <hr>
</section>
