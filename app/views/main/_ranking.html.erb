<section id="rankings" class="rankings">
  <div class="row small-12 medium-12 large-12 small-centered medium-centered large-centered">
    <h3 class="text-center">LEADERBOARD</h3>
    <% leader = @rankings.first %>
    <h3 class="text-center">Current leader is: <span class="leader"> <%= leader.group.name %></span> with: <span class="leader"><%= leader.points %></span> points</h3>
  </div>
  <div class="row  small-up-12 medium-up-3 large-up-4">
    <table class="stack">
      <thead>
        <tr>
          <th>Group</th>
          <th>Points</th>
        </tr>
      </thead>
      <tbody>
        <% @rankings.each do |r| %>
          <tr>
            <td><%= r.group.name %></td>
            <td><%=r.points %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <hr>
</section>
