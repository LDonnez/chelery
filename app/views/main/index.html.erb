<section id="header" class="header" style="background-image: url('<%=@settings.header_image.url(:large)%>')">
  <div class="container">
    <div class="headtitle row">
      <div class="small-3 small-centered columns">
        <h1><%=@settings.headline%></h1>
      </div>
    </div>
    <div class="subtitle row">
      <div class="small-3 small-centered columns">
        <h2><%=@settings.subline%></h2>
      </div>
    </div>
    <div class="info row">
      <div class="small-4 columns"><%=@settings.header_column_1.html_safe%></div>
      <div class="small-4 columns"><%=@settings.header_column_2.html_safe%></div>
      <div class="small-4 columns"><%=@settings.header_column_3.html_safe%></div>
    </div>
  </div>
</section>
<section id="galleries" class="small-up-1 medium-up-2 large-up-4">
  <% @galleries.each do |g| %>
    <div class="column">
      <%= image_tag g.photos.first.photo(:medium)%>
      <%= label_tag g.title %>
    </div>
  <% end %>
</section>
